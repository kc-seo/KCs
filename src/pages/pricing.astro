    id="cta"
    title="Ready to Launch Your High-Performance Digital System?"
    subtitle="Book a free 15-minute consultation to determine which One-Time DFY Bundle or Monthly Retainer is the perfect fit for your business goals."
    actions={[
      {
        variant: 'primary',
        text: 'Book Strategy Session Now',
        href: '/contact', // Updated to a contact/booking link
      },
    ]}

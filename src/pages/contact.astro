---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact | Start Your DFY Project',
};
---

<Layout metadata={metadata}>
  <HeroText
    tagline="Start Your Project"
    title="Ready to Launch Your Automated System?"
    subtitle="Letâ€™s discuss your vision. Our strategists will guide you through the next steps for your DFY Website, Chatbot, or SEO foundation."
  />

  <ContactUs
    id="form"
    title="Book a Free Strategy Session"
    subtitle="The fastest way to start your DFY project is to schedule a short call. If your query is general, use the form below."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Your Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Your Business Email',
      },
      {
        type: 'text',
        name: 'business',
        label: 'Business Name (Optional)',
      },
    ]}
    textarea={{
      label: 'Tell us about your project goals (Website, Chatbot, SEO, etc.)',
    }}
    disclaimer={{
      label:
        'By submitting this form, you agree to our Privacy Policy and consent to us contacting you about your DFY project.',
    }}
    description="Our team reviews project requests promptly. Expect a personalized response within 4 hours during business hours."
  />

  <Features2
    title="Quick Contacts & Strategy Booking"
    items={[
      {
        title: 'Strategy & Sales Booking',
        description: `**Book a 1-on-1 Call** with a senior strategist to map out your DFY project.<br/>We'll analyze your needs and recommend the best plan.`,
        icon: 'tabler:calendar-event', // Icon for booking/strategy
        callToAction: {
          text: 'Book Now',
          href: '#', // Placeholder for actual booking link (e.g., Calendly)
        },
      },
      {
        title: 'Project Inquiries (Email)',
        description:
          'For detailed project scope documents or partnership proposals:<br/>**sales@knowledgeclick.com**',
        icon: 'tabler:mail-opened',
      },
      {
        title: 'Urgent Technical Support',
        description:
          'For existing clients facing critical issues with a live DFY system (24/7 Monitoring):<br/>**support@knowledgeclick.com**',
        icon: 'tabler:headset',
      },
      {
        title: 'Global Headquarters',
        description: '1234 Innovation Blvd, New York, NY 10001, USA',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
